{
  "compilerOptions": {
    "target": "es2020",            
    "module": "commonjs",          
    "moduleResolution": "node",  
    
    // --- OUTPUT ---
    "rootDir": "./src",             
    "outDir": "./dist",             
    "sourceMap": true,             

    "types": ["node"],              
    "esModuleInterop": true,       
    "allowSyntheticDefaultImports": true,

    "strict": true,                 
    "noImplicitAny": true,          
    "skipLibCheck": true,           
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}